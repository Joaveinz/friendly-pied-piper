script/source = "extends CharacterBody3D


@onready var nav_agent: NavigationAgent3D = $NavigationAgent3D

const SPEED = 3.0
const GRAVITY = 9.8

const ANGULAR_ACCELERATION = 10

func _process(delta):
	if not is_on_floor():
		velocity.y -= GRAVITY * delta
	else:
		velocity.y -= 2
		
	var next_location = nav_agent.get_next_path_position()
	var current_location = global_transform.origin
	var new_velocity = (next_location - current_location).normalized() * SPEED
	
	nav_agent.set_velocity(new_velocity)
	
	$Sketchfab_Scene/Sketchfab_model/RAT_fbx/Object_2/RootNode.rotation.y = lerp_angle($Sketchfab_Scene/Sketchfab_model/RAT_fbx/Object_2/RootNode.rotation.y, atan2(velocity.x,velocity.z), delta * ANGULAR_ACCELERATION)	

func update_target_location(target_location):
	nav_agent.target_position = target_location


func _on_navigation_agent_3d_velocity_computed(safe_velocity):
	velocity = velocity.move_toward(safe_velocity, .25)
	move_and_slide()
"

